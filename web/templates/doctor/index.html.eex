<h2>Listing doctors</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Hiddeninfo</th>
      <th>Bio</th>
      <th>Specialty</th>
      <th>Picture</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for doctor <- @doctors do %>
    <tr>
      <td><%= doctor.name %></td>
      <td><%= doctor.hiddeninfo %></td>
      <td><%= doctor.bio %></td>
      <td><%= doctor.specialty %></td>
      <td><%= doctor.picture %></td>

      <td class="text-right">
        <%= link "Show", to: doctor_path(@conn, :show, doctor), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: doctor_path(@conn, :edit, doctor), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: doctor_path(@conn, :delete, doctor), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New doctor", to: doctor_path(@conn, :new) %>
